{
  "manifest_version": 3,
  "name": "Boycott Extension",
  "version": "0.0.1",
  "description": "Boycott example extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
